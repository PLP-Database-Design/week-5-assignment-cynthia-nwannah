<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        .container {
            display: flex;
            justify-content: space-between;
        }
        table {
            border-collapse: collapse; /* Collapse table borders */
            margin: 10px; /* Space between tables */
            width: 45%; /* Make tables take up equal width */
        }
        th, td {
            border: 1px solid black; /* Add border to cells */
            padding: 8px; /* Space inside cells */
            text-align: left; /* Align text to the left */
        }
    </style>
</head>
<body>
    <div class="container">
        <table>
            <thead>
                <tr>
                
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Provide Specialty</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach(row => {%>
                 <tr>
                 
                    <td><%= row.first_name %></td>
                    <td><%= row.last_name %></td>
                    <td><%= row.provider_specialty %></td>
                 </tr>
                   
                <%});%>
            </tbody>
        </table>
        
        <div class="row">
            <h2>Filtered Providers (First Names Only)</h2>
                <table>
                    <thead>
                        <tr>
                            <th>First Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.forEach(row => { %>
                            <tr>
                                <td><%= row.first_name %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
                
            
        </div>
       
        
    </div>
</body>
</html>
